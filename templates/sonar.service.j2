[Unit]
Description=SonarQube service
After=syslog.target network.target

[Service]
Type=simple
User={{ sonarqube_user }}
ExecStart={{ sonarqube_install_dir }}/sonarqube-9.9.0.65466/bin/linux-x86-64/sonar.sh start
ExecStop={{ sonarqube_install_dir }}/sonarqube-9.9.0.65466/bin/linux-x86-64/sonar.sh stop

[Install]
WantedBy=multi-user.target